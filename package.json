{
  "name": "@vendoor/server",
  "version": "1.0.0",
  "description": "Backend server for Vendoor.",
  "main": "src/index.js",
  "scripts": {
    "serve": "node src/index.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "npm run lint",
    "version": "npx -q @vendoor/what-version -f npm.version git.branch git.hash > config/version.json"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test && node ./hooks/check-branch-name.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vendoor/vendoor-server.git"
  },
  "author": "Vendoor Development Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/vendoor/vendoor-server/issues"
  },
  "homepage": "https://github.com/vendoor/vendoor-server#readme",
  "dependencies": {
    "convict": "5.2.0",
    "fastify": "2.13.0",
    "fastify-oas": "2.6.2",
    "mongodb": "3.5.5",
    "pino": "6.0.0",
    "pino-pretty": "3.6.1"
  },
  "devDependencies": {
    "got": "10.7.0",
    "husky": "4.2.3",
    "standard": "14.3.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
